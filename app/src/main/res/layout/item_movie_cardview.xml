<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.example.palexis3.movieflicks.Activities.MainFlicksActivity"
        android:id="@+id/cv"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCardViewMovieImage"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:scaleType="fitXY"/>
            
            <TextView
                android:id="@+id/tvCardViewMovieTitle"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivCardViewMovieImage"
                android:textSize="15sp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"
                tools:text="Movie Title"/>
            
            
            <TextView
                android:id="@+id/tvCardViewRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivCardViewMovieImage"
                android:layout_toRightOf="@id/tvCardViewMovieTitle"
                android:layout_marginTop="1dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:drawableRight="@drawable/star"
                android:drawablePadding="4dp"/>

            <TextView
                android:id="@+id/tvCardViewMoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tvCardViewMovieTitle"
                android:textColor="@color/colorPrimary"
                android:text="@string/more_info"
                android:drawableRight="@drawable/click_right"
                android:padding="-1dp"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>