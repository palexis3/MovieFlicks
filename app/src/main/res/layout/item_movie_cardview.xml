<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.palexis3.movieflicks.Activities.MainFlicksActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivCardViewMovieImage"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"/>
            
            <TextView
                android:id="@+id/tvCardViewMovieTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivCardViewMovieImage"
                android:textSize="15sp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"
                tools:text="Movie Title"/>
            
            
            <TextView
                android:id="@+id/tvCardViewRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivCardViewMovieImage"
                android:layout_toRightOf="@id/tvCardViewMovieTitle"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:drawableRight="@drawable/star"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/tvCardViewMoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tvCardViewMovieTitle"
                android:textColor="@color/colorPrimary"
                android:text="@string/more_info"
                android:drawableRight="@drawable/click_right"
                android:padding="-1dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>